<Window x:Class="Desktop_Scorebug_WPF.ScoreboardControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Scorebug_WPF"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="ScoreboardControl" Height="450" Width="800">

    <Grid>
        <Image Name="Background" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Source="/Images/Window Overlay.png" RenderTransformOrigin="0,0" Stretch="Fill"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,0,-10,0">
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <StackPanel x:Name="MenuBar" Orientation="Horizontal" MaxWidth="400" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <StackPanel Grid.Row="2" x:Name="ButtonContainer" Orientation="Vertical" MaxWidth="400" HorizontalAlignment="Left"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
