<local:Scoreboard x:Class="Desktop_Scorebug_WPF.NascarTicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Scorebug_WPF"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        Topmost="True"
        Top="0" Left="0"
        Background="Transparent"
        Loaded="Window_Loaded"
        Title="NascarTicker" Height="100" Width="1520">
    <Grid x:Name="RootGrid">
        <Image Name="BackgroundBase" HorizontalAlignment="Center" Height="126" VerticalAlignment="Center" Width="1520" 
        Source="/Images/Custom Ticker/Nascar/Ticker-Base.png" RenderTransformOrigin="0,0"/>
        <Image Name="ScrollBar" HorizontalAlignment="Center" Height="126" VerticalAlignment="Center" Width="1520" 
        Source="/Images/Custom Ticker/Nascar/Ticker-ScrollBar.png" RenderTransformOrigin="0,0"/>
        <Image Name="TickerFlag" HorizontalAlignment="Center" Height="126" VerticalAlignment="Center" Width="1520" 
        Source="/Images/Custom Ticker/Nascar/Ticker-Flag.png" RenderTransformOrigin="0,0"/>
        <Image Name="TickerFlagOverlay" HorizontalAlignment="Center" Height="126" VerticalAlignment="Center" Width="1520" 
        Source="/Images/Custom Ticker/Nascar/Ticker-Flag-Overlay.png" RenderTransformOrigin="0,0"/>
        <Grid x:Name="Podium">
            <Image Name="TickerPodiumPositions" HorizontalAlignment="Center" Height="126" VerticalAlignment="Center" Width="1520" 
            Source="/Images/Custom Ticker/Nascar/Ticker-Podium-Position.png" RenderTransformOrigin="0,0"/>
            <Image Name="TickerP1Base" HorizontalAlignment="Center" Height="126" VerticalAlignment="Center" Width="1520" 
            Source="/Images/Custom Ticker/Nascar/Ticker-P1-Base.png" RenderTransformOrigin="0,0"/>
            <Image Name="TickerP1Number" HorizontalAlignment="Center" Height="126" VerticalAlignment="Center" Width="1520" 
            Source="/Images/Custom Ticker/Nascar/Ticker-P1-NumberCard.png" RenderTransformOrigin="0,0" Loaded="P1NumberLoaded"/>
            <Image Name="TickerP1Name" HorizontalAlignment="Center" Height="126" VerticalAlignment="Center" Width="1520" 
            Source="/Images/Custom Ticker/Nascar/Ticker-P1-Name.png" RenderTransformOrigin="0,0" Loaded="P1NameLoaded"/>
            <Image Name="TickerP1Timing" HorizontalAlignment="Center" Height="126" VerticalAlignment="Center" Width="1520" 
            Source="/Images/Custom Ticker/Nascar/Ticker-P1-Timing.png" RenderTransformOrigin="0,0" Loaded="P1TimingLoaded"/>
        </Grid>
    </Grid>
</local:Scoreboard>
