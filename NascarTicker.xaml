<Window x:Class="Desktop_Scorebug_WPF.NascarTicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Scorebug_WPF"
        mc:Ignorable="d"
        Title="NascarTicker" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Grid Margin="0,0,0,10">
                <TextBox x:Name="RaceInput"
             Width="300"
             Height="30"
             TextChanged="RaceInput_TextChanged"
             GotFocus="RaceInput_GotFocus"
             LostFocus="RaceInput_LostFocus"/>
                <TextBlock x:Name="Placeholder"
               Text="Enter race name"
               Foreground="Gray"
               Margin="5,5,0,0"
               IsHitTestVisible="False"
               VerticalAlignment="Top"
               Visibility="Visible"/>
            </Grid>

            <Button Content="Search" Width="100" Click="SearchButton_Click"/>
            <ListBox x:Name="DriverList" Margin="0,10,0,10" Height="200"/>
            <TextBlock x:Name="StatusText" Text="" Foreground="DarkGreen"/>
        </StackPanel>
    </Grid>
</Window>
